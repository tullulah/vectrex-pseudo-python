{
  "scopeName": "source.vpy",
  "patterns": [
    { "include": "#comment" },
    { "include": "#keyword" },
    { "include": "#numbers" },
    { "include": "#meta" },
    { "include": "#vectorlist" },
    { "include": "#strings" },
    { "include": "#function" },
  { "include": "#builtin" },
  { "include": "#constants" },
    { "include": "#operators" }
  ],
  "repository": {
    "comment": { "patterns": [{"name":"comment.line.number-sign.vpy","match":"#.*$"}] },
    "keyword": { "patterns": [
    {"name":"keyword.control.vpy","match":"\\b(def|struct|return|for|in|range|if|elif|else|while|break|continue|and|or|not|let)\\b"},
    {"name":"storage.modifier.const.vpy","match":"\\bconst\\b"}
    ] },
    "numbers": { "patterns": [
      {"name":"constant.numeric.hex.vpy","match":"0x[0-9A-Fa-f]+"},
      {"name":"constant.numeric.bin.vpy","match":"0b[01]+"},
  {"name":"constant.numeric.dec.vpy","match":"\\b\\d+\\b"}
    ] },
  "meta": { "patterns": [
    {"match":"^\\s*(META)\\s+(TITLE|COPYRIGHT|MUSIC)\\s*(=)\\s*(\"[^\"]*\")","captures":{
      "1":{"name":"storage.type.meta.vpy"},
      "2":{"name":"constant.language.meta.key.vpy"},
      "3":{"name":"keyword.operator.assignment.vpy"},
      "4":{"name":"string.quoted.double.vpy"}
    }}
  ] },
    "vectorlist": { "patterns": [
    {"name":"entity.name.section.vectorlist.vpy","match":"^\\s*vectorlist\\s+[A-Za-z_][A-Za-z0-9_]*:\\s*$"},
    {"name":"support.function.vectorcmd.vpy","match":"\\b(MOVE|RECT|POLYGON|CIRCLE|ARC|SPIRAL|ORIGIN|INTENSITY)\\b"}
    ] },
    "strings": { "patterns": [{"name":"string.quoted.double.vpy","begin":"\"","end":"\"","patterns":[{"match":"\\\\.|[^\\\"]"}]}] },
    "function": { "patterns": [
        {"match":"^\\s*(def)\\s+([A-Za-z_][A-Za-z0-9_]*)","captures":{
          "1":{"name":"keyword.control.def.vpy"},
          "2":{"name":"entity.name.function.vpy"}
        }},
        {"match":"^\\s*(struct)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:","captures":{
          "1":{"name":"keyword.control.struct.vpy"},
          "2":{"name":"entity.name.type.struct.vpy"}
        }}
    ] },
      "builtin": { "patterns": [
        {"name":"support.function.builtin.vpy","match":"\\b(PRINT_TEXT|DRAW_POLYGON|DRAW_CIRCLE_SEG|DRAW_CIRCLE|DRAW_ARC|DRAW_SPIRAL)\\b"}
      ] },
      "constants": { "patterns": [
        {"match":"^\\s*const\\s+([A-Z][A-Z0-9_]+)","captures":{"1":{"name":"variable.other.constant.vpy"}}},
        {"name":"variable.other.constant.vpy","match":"\\bI_[A-Z0-9_]+\\b"}
      ] },
    "operators": { "patterns": [
    {"name":"keyword.operator.vpy","match":"[+\\-*/%=<>!]+"}
    ] }
  },
  "fileTypes": ["vpy"],
  "name": "VPy",
  "uuid": "b9b0c820-9c6c-4d9f-92c4-0b4c7ac0vpylang"
}

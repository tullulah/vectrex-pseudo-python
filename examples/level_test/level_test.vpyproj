[project]
name = "level_test"
version = "0.1.0"
entry = "src/main.vpy"
description = "Level System Builtins Test - Demonstrates LOAD_LEVEL, GET_OBJECT_COUNT, GET_OBJECT_PTR, GET_LEVEL_BOUNDS"

[build]
output = "build/level_test.bin"
optimization = 2
debug_symbols = true

[sources]
vpy = ["src/**/*.vpy"]

[resources]
vectors = ["assets/vectors/*.vec"]
animations = ["assets/animations/*.anim"]
music = ["assets/music/*.mus"]
sfx = ["assets/sfx/*.sfx"]
voices = ["assets/voices/*.vox"]
levels = ["assets/playground/*.vplay"]

[metadata]
author = "VPy Team"
category = "Test/Demo"
tags = ["level-system", "playground", "builtins", "test"]

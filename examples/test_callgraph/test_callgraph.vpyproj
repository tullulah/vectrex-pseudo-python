[project]
name = "test_callgraph"
version = "0.1.0"
entry = "src/main.vpy"

[build]
output = "build/test_callgraph.bin"
optimization = 2
debug_symbols = true

[multibank]
enabled = true
banks = 32
bank_size = 16384

[sources]
vpy = ["src/**/*.vpy"]

[resources]
vectors = ["assets/vectors/*.vec"]
animations = ["assets/animations/*.anim"]
music = ["assets/music/*.mus"]
sfx = ["assets/sfx/*.sfx"]
voices = ["assets/voices/*.vox"]
